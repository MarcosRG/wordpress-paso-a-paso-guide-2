# ==================== BIKESUL UNIFIED ENVIRONMENT VARIABLES EXAMPLE ====================
# Copiar este archivo como .env y completar con los valores reales

# ==================== DATABASE CONFIG ====================
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require
NEON_PROJECT_ID=your-neon-project-id
NEON_BRANCH_ID=your-neon-branch-id

# ==================== WOOCOMMERCE CONFIG ====================
WOOCOMMERCE_API_BASE=https://your-site.com/wp-json/wc/v3
WOOCOMMERCE_CONSUMER_KEY=ck_your_consumer_key
WOOCOMMERCE_CONSUMER_SECRET=cs_your_consumer_secret

# ==================== CRM CONFIG ====================
CRM_API_USERNAME=your_crm_username
CRM_API_PASSWORD=your_crm_password
CRM_API_BASE_URL=https://your-site.com

# ==================== ADMIN CONFIG ====================
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_secure_admin_password
ADMIN_EMAIL=admin@yourcompany.com
ENCRYPTION_KEY=your-encryption-key

# ==================== STACK AUTH CONFIG ====================
STACK_PROJECT_ID=your-stack-project-id
STACK_PUBLISHABLE_CLIENT_KEY=pck_your_publishable_key
STACK_SECRET_SERVER_KEY=ssk_your_secret_key

# ==================== FEATURE FLAGS ====================
ENABLE_DEBUG=false
ENABLE_MOCK_DATA=false
ENABLE_AUTO_SYNC=true
ENABLE_REAL_TIME_STOCK=true

# ==================== SYNC CONFIG ====================
SYNC_INTERVAL=600000
STOCK_UPDATE_INTERVAL=120000
MAX_RETRIES=3
DB_TIMEOUT=30
LOG_LEVEL=info

# ==================== ENVIRONMENT ====================
NODE_ENV=development
